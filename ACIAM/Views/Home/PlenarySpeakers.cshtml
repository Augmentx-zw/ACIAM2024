@model IEnumerable<ACIAM.Models.Speaker>

<!-- speaking-section2
    ================================================== -->
<section class="speaking-section2">
    <div class="container">
        <div class="title-section white-style">
            <div class="row">
                <div class="col-md-8">
                    <h1>Plenary Speakers</h1>
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
        <div class="speakers-box">
            <div class="row">
                @foreach (var speaker in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="speaker-post" style="text-align: center; margin-bottom: 20px;">
                            <div class="speaker-image" style="width: 100%; overflow: hidden;">
                                <a href="#">
                                    <img src="~/uploads/@speaker.Image" alt="@speaker.Title" style="width: 100%; height: 300px; object-fit: cover;" />
                                </a>
                            </div>
                            <div class="speaker-content" style="padding: 15px;">
                                <h2 style="margin-bottom: 10px;">
                                    <a asp-action="SpeakerSingle">@speaker.Title</a>
                                </h2>
                                <span>@speaker.SubTitle</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End speaking section2 -->
