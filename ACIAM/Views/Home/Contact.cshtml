<section class="contact-section3">
	<div class="container">
		<div class="title-section center">
			<h1>Get in touch with us</h1>
		</div>
		<div class="contact-box">
			<div class="contact-info">
				<div class="row">

					<div class="col-md-4">
						<p><i class="fas fa-map-marker-alt"></i> Park View @@ Tramways, Woodstock, Cape Town, South Africa.</p>
					</div>

					<div class="col-md-4">
						<p><i class="fas fa-phone-alt"></i> +27639716010</p>
					</div>

					<div class="col-md-4">
						<p><i class="fas fa-envelope"></i> admin@@aciam.co, registration@@aciam.co </p>
					</div>

				</div>
			</div>

		</div>
	</div>

	<div id="map"></div>

	<div class="container">
		<form id="contact-form">
			<h2>We're ready , how can we help?</h2>
			<div class="row">
				<div class="col-md-4">
					<input name="name" id="name" type="text" placeholder="Your Name*">
				</div>
				<div class="col-md-4">
					<input name="mail" id="mail" type="text" placeholder="Your Email*">
				</div>
				<div class="col-md-4">
					<input name="subject" id="subject" type="text" placeholder="Subject">
				</div>
			</div>
			<textarea name="comment" id="comment" placeholder="Message*"></textarea>
			<div class="center-area">
				<input type="submit" id="submit_contact" value="Send">
			</div>
			<div id="msg" class="message"></div>
		</form>

	</div>
</section>
<!-- End contact section -->