@model IEnumerable<ACIAM.Models.Speaker>

@{
    ViewData["Title"] = "Speakers";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Speaker</a>
</p>


<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Speakers List</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>SubTitle</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var speaker in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/uploads/@speaker.Image" alt="Image" style="max-height: 60px;" />
                                    </td>
                                    <td>@speaker.Title</td>
                                    <td>@speaker.Category</td>
                                    <td>@speaker.SubTitle</td>
                                    <td>@speaker.Description</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@speaker.Id" class="btn btn-sm btn-primary">Edit</a>
                                        <a asp-action="Details" asp-route-id="@speaker.Id" class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@speaker.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
