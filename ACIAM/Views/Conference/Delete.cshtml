@model ACIAM.Models.Conference

@{
    ViewData["Title"] = "Delete Conference";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Are you sure you want to delete this conference?</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Title</label>
                    <p class="form-control-static">@Model.Title</p>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <p class="form-control-static">@Model.Category</p>
                </div>
                <div class="form-group">
                    <label>SubTitle</label>
                    <p class="form-control-static">@Model.SubTitle</p>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <p class="form-control-static">@Model.Description</p>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <p class="form-control-static">@Model.Image</p>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
