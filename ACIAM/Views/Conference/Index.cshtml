@{
    ViewData["Title"] = "All Conference";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Conference</a>
</p>

<!-- Conferences Table -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Conference List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>SubTitle</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var conference in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/uploads/@conference.Image" alt="Image" style="max-height: 60px;" />
                            </td>
                            <td>@conference.Title</td>
                            <td>@conference.Category</td>
                            <td>@conference.SubTitle</td>
                            <td>@conference.Description</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = conference.Id })" class="btn btn-sm btn-primary">Edit</a>
                                <a href="@Url.Action("Details", new { id = conference.Id })" class="btn btn-sm btn-info">Details</a>
                                <a href="@Url.Action("Delete", new { id = conference.Id })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
