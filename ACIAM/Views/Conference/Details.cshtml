@model ACIAM.Models.Conference

@{
    ViewData["Title"] = "Conference Details";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4>Conference Details</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Title</label>
                    <p class="form-control-static">@Model.Title</p>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <p class="form-control-static">@Model.Category</p>
                </div>
                <div class="form-group">
                    <label>SubTitle</label>
                    <p class="form-control-static">@Model.SubTitle</p>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <p class="form-control-static">@Model.Description</p>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <p class="form-control-static">@Model.Image</p>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
